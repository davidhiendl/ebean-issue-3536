root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{java,php,xml,js,py,kt}]
charset = utf-8

[*.kt]
indent_style = space
indent_size = 4

[{*.Makefile,Makefile}]
indent_style = tab

[Dockerfile]
indent_style = space

[*.{yaml,yml}]
indent_style = space
indent_size = 2
